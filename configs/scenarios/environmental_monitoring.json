{
    "name": "Environmental Monitoring (Remote)",
    "description": "Low-power wide-area network sensors for wildfire detection",
    "protocol": "coap",
    "mode": "active",
    "server_ip": "127.0.0.1",
    "server_port": 5000,
    "num_clients": 20,
    "duration": 60,
    "packets_per_client": 3,
    "sensors": ["smoke", "co2", "temperature", "humidity"],
    "traffic_pattern": {
        "smoke": {"rate_hz": 0.05, "burst": true},     
        "co2": {"rate_hz": 0.05, "burst": false},
        "temperature": {"rate_hz": 0.01, "burst": false},
        "humidity": {"rate_hz": 0.01, "burst": false}     
    },
    "network_conditions": {
        "latency_ms": 500,
        "jitter_ms": 100,
        "bandwidth_kbps": 50,
        "loss_percent": 10.0
    },
    "failure_injection": {
        "packet_loss": 0.15,  
        "client_crashes": []
    },
    "network_profile": "lorawan"
}
